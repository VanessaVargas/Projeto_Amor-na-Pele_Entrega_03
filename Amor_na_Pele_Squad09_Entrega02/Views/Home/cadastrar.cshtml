@model Amor_na_Pele_Squad09_Entrega02.Models.ModelTriploMulherEmpresaNewsletter

@{
    ViewData["Title"] = "Cadastrar";
}

<!-- Cards de Cadastro -->
<section class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <!-- Primeiro Card -->
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top"
                         src="~/imagens/card-cadastro-pessoa.jpg"
                         alt="Card Cadastrar Mulher" />
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text">Cadastrar Mulher</p>
                        <a class="btn btn-dark"
                           data-bs-toggle="collapse"
                           href="#collapseFormMulher"
                           role="button"
                           aria-expanded="false"
                           aria-controls="collapseExample">Cadastrar</a>
                    </div>
                </div>
            </div>
            <!-- /Primeiro Card -->
            <!-- Segundo Card -->
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top"
                         src="~/imagens/card-cadastro-empresa.jpg"
                         alt="Card Cadastrar Empresa" />
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text">Cadastrar Empresa</p>
                        <a class="btn btn-dark"
                           data-bs-toggle="collapse"
                           href="#collapseFormEmpresa"
                           role="button"
                           aria-expanded="false"
                           aria-controls="collapseEmpresa">Cadastrar</a>
                    </div>
                </div>
            </div>
            <!-- /Segundo Card -->
        </div>

        <!-- Formulário Mulher -->
        <div class="row">
            <div class="collapse" id="collapseFormMulher">
                <div class="card mb-4 shadow-sm">
                    <h2 class="titleForm">Cadastro Mulher</h2>
                    <form class="cardForm" asp-action="cadastroMulherEmpresaNewsletter" method="post">
                        <div class="form-group">
                            <label for="inputNome">Nome completo:</label>
                            <input type="text"
                                   class="form-control"
                                   id="inputNome"
                                   placeholder="Nome"
                                   asp-for="cadMulher.nomeMulher" />
                        </div>
                        <div class="form-group">
                            <label for="inputNascimento">Data de nascimento:</label>
                            <input type="date"
                                   class="form-control"
                                   id="inputNascimento" asp-for="cadMulher.dataNascimento" />
                        </div>
                        <div class="form-group">
                            <label for="inputTelefone">Telefone:</label>
                            <input type="tel"
                                   class="form-control"
                                   id="inputTelefone"
                                   placeholder="Telefone"
                                   asp-for="cadMulher.numeroTelefoneMulher" />
                        </div>
                        <div class="form-group">
                            <label for="inputEmail">Endereço de e-mail:</label>
                            <input type="email"
                                   class="form-control"
                                   id="inputEmail"
                                   placeholder="email@exemplo.com"
                                   asp-for="cadMulher.emailMulher" />
                        </div>
                        <button type="submit" class="btn btn-dark">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- /Formulário Mulher -->
        <!-- Formulário  Empresa -->
        <div class="row">
            <div class="collapse" id="collapseFormEmpresa">
                <div class="card mb-4 shadow-sm">
                    <h2 class="titleForm">Cadastro Empresa</h2>
                    <form class="cardForm" asp-action="cadastroMulherEmpresaNewsletter" method="post">
                        <div class="form-group">
                            <label for="inputNome">Nome do contato:</label>
                            <input type="text"
                                   class="form-control"
                                   id="inputNome"
                                   placeholder="Nome"
                                   asp-for="cadEmp.nomeParaContatoEmpresa" />
                        </div>
                        <div class="form-group">
                            <label for="inputCNPJ">CNPJ:</label>
                            <input type="text"
                                   class="form-control"
                                   id="inputCNPJ"
                                   placeholder="CNPJ"
                                   asp-for="cadEmp.Cnpj" />
                        </div>
                        <div class="form-group">
                            <label for="inputRazaoSocial">Razão Social:</label>
                            <input type="text"
                                   class="form-control"
                                   id="inputRazaoSocial"
                                   placeholder="Razão social"
                                   asp-for="cadEmp.RazaoSocial" />
                        </div>
                        <div class="form-group">
                            <label for="inputTelefone">Telefone:</label>
                            <input type="tel"
                                   class="form-control"
                                   id="inputTelefone"
                                   placeholder="Telefone"
                                   asp-for="cadEmp.NumeroTelefoneEmpresa" />
                        </div>
                        <div class="form-group">
                            <label for="inputEmail">Endereço de e-mail:</label>
                            <input type="email"
                                   class="form-control"
                                   id="inputEmail"
                                   placeholder="email@exemplo.com"
                                   asp-for="cadEmp.emailEmpresa" />
                        </div>
                        <div class="form-group">
                            <label for="inputEstado">Estado:</label>
                            <input type="text"
                                   class="form-control"
                                   id="inputEstado"
                                   placeholder="Estado"
                                   asp-for="cadEmp.estado" />
                        </div>
                        <div class="form-group">
                            <label for="inputCidade">Cidade:</label>
                            <input type="text"
                                   class="form-control"
                                   id="inputCidade"
                                   placeholder="Cidade"
                                   asp-for="cadEmp.cidade" />
                        </div>
                        <div class="form-group">
                            <label for="inputEndereco">Endereço:</label>
                            <input type="text"
                                   class="form-control"
                                   id="inputEndereco"
                                   placeholder="Endereço"
                                   asp-for="cadEmp.endereco" />
                        </div>
                        <div class="form-group">
                            <label for="inputEspecialidade">Especialidade do seu negócio:</label>
                            <input type="text"
                                   class="form-control"
                                   id="inputEspecialidade"
                                   placeholder="Informe a especialidade do serviço a ser oferecido"
                                   asp-for="cadEmp.descricaoNegocio" />
                        </div>
                        <button type="submit" class="btn btn-dark">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- /Formulário  Empresa -->
    </div>
</section>
<!-- /Cards de Cadastro -->


<!--Newsletter-->
<section class="newsletter">
    <form asp-action="cadastroMulherEmpresaNewsletter" method="post">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="content">
                        <h2>Receba as nossas novidades!</h2>
                        <div class="input-group">
                            <input type="email"
                                   class="form-control"
                                   placeholder="Informe o seu endereço de e-mail"
                                   required
                                   asp-for="cadNews.emailNewsletter" />
                            <button class="btn btn-dark" type="submit">Inscreva-se agora</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
